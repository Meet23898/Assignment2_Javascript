<h1 style="font-style: oblique; text-align: center;">{{title}}</h1>
{{#if user}} 
    <a  href="/Projects/add">
        <button type="button"  class="btn btn-primary ">Add Employee </button>
    </a>
    {{/if}}
 
<table class="table table-hover">
  <thead class=" table table-dark">
    <tr>
      <th scope="col">Employee Name</th>
      <th scope="col">Email</th>
      <th scope="col">Mobile</th>
      <th scope="col">City</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      {{#each project}}
      <td>{{this.fullName}}</td> 
      <td>{{this.email}}</td>
      <td>{{this.mobile}}</td>
      <td>{{this.city}}</td>
      {{#if ../user}}
      <td><a href="/Projects/delete/{{this._id}}" onclick="return taskDeleteConfirmation();"> 
            <button type="button" class="btn btn-outline-danger">
                Delete</button>
        </a></td>
        <td><a href="/Projects/edit/{{this._id}}"> 
            <button type="button" class="btn btn-outline-success">
                Edit</button>
        </a></td>
         {{/if}}
    </tr>
   
    {{/each}}
    </tbody>
</table>